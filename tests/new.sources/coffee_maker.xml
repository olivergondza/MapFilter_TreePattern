<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE pattern SYSTEM "TreePattern053.dtd">
<pattern>
  <all>

    <!-- String ( coffee|tea|cacao ) -->
    <key name="beverage">
      <value pattern="coffee|tea|cacao" />
    </key>

    <!-- Bool; default yes -->
    <key name="cup">
      <value default="yes" pattern="/^(?:yes|no)$/" />
    </key>

    <!-- Int ( -5..5 ); default 0 -->
    <key name="sugar">
      <value default="0" pattern="/^-?[0-5]$/" />
    </key>

  </all>
</pattern>
